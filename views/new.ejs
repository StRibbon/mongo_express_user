<% include partials/header %>

  <h1>Add a user</h1>
    <form action="/users" method="POST">
      <div class="forms">
        <label for="name">Name: </label>
      	<input type="text" name="user[name]" id="name" class="form-input" autofocus>
      </div>
      <div class="forms">
        <label for="age">Age: </label>
      	<input type="text" age="user[age]" id="age" class="form-input" autofocus>
      </div>
      <div class="forms">
        <label for="email">Email: </label>
      	<input type="text" email="user[email]" id="email" class="form-input" autofocus>
      </div>
      <div class="forms">
        <label for="avatar">Avatar: </label>
      	<input type="text" avatar="user[avatar]" id="avatar" class="form-input" autofocus>
      </div>
      <input type="submit" value="create" class="button">
    </form>
  <a href="/users">home</a>
<% include partials/footer %>
